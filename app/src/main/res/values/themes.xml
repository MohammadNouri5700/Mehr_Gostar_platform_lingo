<resources>

    <style name="Theme.App.Light" parent="Theme.Material3.Light.NoActionBar">
<!--        Full Screen       -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowActionBar">false</item>


        <item name="White_Gray">@color/white</item>
        <item name="navigationIconsColor">@color/navLight</item>
        <item name="headerTextColor">@color/black</item>
        <item name="headerTextColorInverse">@color/white</item>
        <item name="pageBackground">@color/backgroundPageLight</item>
        <item name="itemLevelTwo">@color/itemLevelTwoLight</item>
        <item name="itemLevelTwoInverse">@color/itemLevelTwoDark</item>
        <item name="bottomNavigation">@color/bottomNavigationLight</item>
        <item name="levelCube">@color/levelCubeLight</item>
        <item name="itemLevelThere">@color/itemLevelThereLight</item>
        <item name="itemLevelThereInverse">@color/itemLevelThereDark</item>
    </style>


    <style name="Theme.App.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <!--        Full Screen       -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowActionBar">false</item>


        <item name="White_Gray">@color/gray</item>
        <item name="navigationIconsColor">@color/navdark</item>
        <item name="headerTextColor">@color/white</item>
        <item name="headerTextColorInverse">@color/black</item>
        <item name="pageBackground">@color/backgroundPageDark</item>
        <item name="itemLevelTwo">@color/itemLevelTwoDark</item>
        <item name="itemLevelTwoInverse">@color/itemLevelTwoLight</item>
        <item name="bottomNavigation">@color/bottomNavigationDark</item>
        <item name="levelCube">@color/levelCubeDark</item>
        <item name="itemLevelThere">@color/itemLevelThereDark</item>
        <item name="itemLevelThereInverse">@color/itemLevelThereLight</item>
    </style>



<!--=====================================================================================================-->

    <style name="BottomNavigationCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/Overlay_BottomNavigationCardViewStyle</item>
    </style>


    <style name="Overlay_BottomNavigationCardViewStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_8sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_8sdp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>


    <style name="TaskLargeCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/Overlay_TaskLargeCardViewStyle</item>
    </style>


    <style name="Overlay_TaskLargeCardViewStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">@dimen/_13sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_13sdp</item>
    </style>


</resources>